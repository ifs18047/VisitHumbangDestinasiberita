<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".destinasi.destinasi_fragment"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        >

        <ImageView
            android:id="@+id/rectangles"
            android:layout_width="11dp"
            android:layout_height="4dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="358dp"
            android:src="@drawable/ic_rectangle_60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tc_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:text="REKOMENDASI OBJEK WISATA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangles" />

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel4"
            android:layout_width="295dp"
            android:layout_height="249dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:autoPlay="false"
            app:carouselBackground="@color/white"
            app:carouselType="BLOCK"
            app:carouselGravity="CENTER"
            app:imageScaleType="centerCrop"
            app:indicatorMargin="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tc_location"
            app:previousButtonMargin="8dp"
            app:scaleOnScroll="true"
            app:scalingFactor=".25"
            app:showBottomShadow="false"
            app:showCaption="true"
            app:showIndicator="true"
            app:showNavigationButtons="false"
            app:showTopShadow="false" />

        <me.relex.circleindicator.CircleIndicator2
            android:id="@+id/custom_indicator"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginTop="24dp"
            app:ci_animator="@animator/scale_with_alpha"
            app:ci_width="10dp"
            app:ci_height="10dp"
            app:ci_drawable="@drawable/dot"
            app:ci_drawable_unselected="@drawable/dot2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel4" />

        <ImageView
            android:id="@+id/rectangles2"
            android:layout_width="11dp"
            android:layout_height="4dp"
            android:layout_marginEnd="358dp"
            android:src="@drawable/ic_rectangle_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_indicator" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="112dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:text="OBJEK WISATA FAVORIT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangles2" />

        <TextView
            android:id="@+id/lihatsemua_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:text="@string/lihatsemua"
            android:textColor="@color/main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/rectangles2" />

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel5"
            android:layout_width="295dp"
            android:layout_height="124dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:autoPlay="false"
            app:carouselGravity="CENTER"
            app:carouselBackground="@color/white"
            app:carouselType="BLOCK"
            app:imageScaleType="centerCrop"
            app:indicatorMargin="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:previousButtonMargin="8dp"
            app:scaleOnScroll="true"
            app:scalingFactor=".25"
            app:showBottomShadow="false"
            app:showCaption="true"
            app:showIndicator="true"
            app:showNavigationButtons="false"
            app:showTopShadow="false" />

        <me.relex.circleindicator.CircleIndicator2
            android:id="@+id/custom_indicator2"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginTop="24dp"
            app:ci_animator="@animator/scale_with_alpha"
            app:ci_width="10dp"
            app:ci_height="10dp"
            app:ci_drawable="@drawable/dot"
            app:ci_drawable_unselected="@drawable/dot2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel5" />

        <ImageView
            android:id="@+id/rectangles3"
            android:layout_width="11dp"
            android:layout_height="4dp"
            android:layout_marginEnd="358dp"
            android:src="@drawable/ic_rectangle_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_indicator2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="216dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:text="Wisata Lainnya"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangles3" />

        <TextView
            android:id="@+id/lihatsemua_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:text="@string/lihatsemua"
            android:textColor="@color/main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/rectangles3" />

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel6"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:autoWidthFixing="false"
            app:carouselGravity="START"
            app:carouselPaddingEnd="8dp"
            app:carouselPaddingStart="8dp"
            app:carouselType="SHOWCASE"
            app:infiniteCarousel="false"
            app:scaleOnScroll="false"
            app:showBottomShadow="false"
            app:showCaption="false"
            app:showIndicator="false"
            app:showNavigationButtons="false"
            app:showTopShadow="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
             />




    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>